<p id="notice"><%= notice %></p>

<h1>Problems</h1>

<table>
  <thead>
    <tr>
      <th>Theme</th>
      <th>Type</th>
      <th>Level</th>
      <th>Content</th>
      <th>Answer</th>
      <th>Correct counter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.theme_id %></td>
        <td><%= problem.type %></td>
        <td><%= problem.level %></td>
        <td><%= problem.content %></td>
        <td><%= problem.answer %></td>
        <td><%= problem.correct_counter %></td>
        <td><%= link_to 'Show', problem %></td>
        <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
        <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Problem', new_problem_path %>
